# Enfermera Elena Configuration
# Copy this file to .env and add your API keys

# OpenAI API Key for context-aware translation
# Get your key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your-api-key-here

# Optional: LibreTranslate API (if using cloud version)
LIBRETRANSLATE_API_KEY=

# Optional: Google Translate API
GOOGLE_TRANSLATE_API_KEY=

# Optional: AWS Translate
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1

# Translation settings
CONFIDENCE_THRESHOLD=0.8
MAX_API_CALLS_PER_DOCUMENT=100
ENABLE_CACHING=true